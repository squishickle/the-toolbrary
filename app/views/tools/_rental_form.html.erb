<%=  simple_form_for [@tool, @rental] do |f| %>
  <%= f.input :start_date, as: :string, label: "Dates", placeholder: "From", wrapper_html: { class: "inline_field_wrapper" } %>
  <%= f.input :end_date, as: :string, label: '&nbsp;'.html_safe, placeholder: "To", disabled: true, wrapper_html: { class: "inline_field_wrapper" } %>
  <br>
    <table class="table" id="price-table" style = "display: none">
      <tr>
        <td id="price-calc">$284.45 x 1 day</td>
        <td id="price-calc-value" class="text-right">$284.45</td>
      </tr>
      <tr>
        <td>Service Fee</td>
        <td id="service-fee" class="text-right">$12</td>
      </tr>
      <tr>
        <td class="font-weight-bold">Total</td>
        <td id="total-price" class="text-right">$183</td>
      </tr>
    </table>
  <%= f.submit "reserve", class: "rent btn" %>
<% end %>
