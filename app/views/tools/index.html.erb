<div class="container">
  <h1>Tools available</h1>
  <div class="tool-container">
  <% @tools.each do |tool| %>
    <%= link_to(tool) do %>
      <div class="tool-card">
        <div class="Text-box">
          <h2><%= tool.name %></h2>
        </div>
      <% if tool.image.url %>
        <% path = cl_image_path tool.image, height: 300, width: 400, crop: :fill  %>
      <% else %>
        <% path = 'https://images.unsplash.com/photo-1572981779307-38b8cabb2407?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60' %>
      <% end %>
      <div class="tool-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= path %>')">
        <div class='tool-info'>
          <p>
            <% if tool.availability_status %>
            <i class="far fa-check-circle"></i>available
            <% else %>
            <i class="far fa-times-circle">reserved</i>available
            <% end %>
          </p>
        </div>
        <div class='tool-info'>
          <p>
            $<%= tool.price %> per day
          </p>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
  </div>
</div>
