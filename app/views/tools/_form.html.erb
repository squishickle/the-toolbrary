<%=  simple_form_for(tool) do |f| %>
  <%=  f.input :name %>
  <%=  f.input :description %>
  <%=  f.input :brand %>
  <%=  f.input :image %>
  <%=  f.input :image_cache, as: :hidden %>
  <%=  f.input :price %>
  <%=  f.input :parts_list %>
  <%=  f.input :tech_specs %>
  <%=  f.input :category, collection: ["Automotive", "Garden", "Home"] %>
  <%= f.submit %>
<% end %>
